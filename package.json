{
  "name": "@cdp1337/cmsjs",
  "version": "3.0.0",
  "description": "The JavaScript Site Generator, forked from Chris Diana's CMS.js",
  "keywords": [
    "client-side, javascript, site-generator, cms, markdown"
  ],
  "homepage": "https://github.com/cdp1337/cms.js",
  "scripts": {
    "compile": "rollup -c",
    "minify": "uglifyjs dist/cms.js -m --comments /^!/ -o dist/cms.min.js",
    "example": "copyfiles --flat dist/cms.min.js examples/js/",
    "build": "npm run compile && npm run minify && npm run example",
    "pack": "./build_pack.sh",
    "watch": "rollup -c -w",
    "dev": "npm-run-all --parallel serve watch",
    "serve": "serve ./examples/",
    "start": "npm run dev"
  },
  "main": "dist/cms.js",
  "module": "dist/cms.es.js",
  "browser": "dist/cms.min.js",
  "unpkg": "dist/cms.js",
  "jsdelivr": "dist/cms.js",
  "files": [
    "src",
    "dist/*.js",
    "examples",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/cdp1337/cms.js.git"
  },
  "author": {
    "name": "Charlie Powell"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdp1337/cms.js/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@types/copyfiles": "^2.4.1",
    "@types/uglify-js": "^3.17.1",
    "acorn": ">=6.4.1",
    "braces": ">=2.3.1",
    "copyfiles": "^2.4.1",
    "eslint-utils": ">=1.4.1",
    "ini": ">=1.3.6",
    "js-yaml": ">=3.13.1",
    "lodash": ">=4.17.19",
    "marked": ">=4.0.0",
    "minimist": ">=1.2.3",
    "mixin-deep": ">=1.3.2",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.79.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "serialize-javascript": ">=3.1.0",
    "serve": "^10.1.2",
    "set-value": ">=2.0.1",
    "uglify-js": "^3.17.4"
  }
}
